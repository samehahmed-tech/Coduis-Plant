# Server
DATABASE_URL=postgresql://<user>:<password>@<host>:5432/<database>
API_PORT=3001
CORS_ORIGINS=https://erp.example.com,https://admin.example.com
GO_LIVE_REQUIRE_STRICT_CORS=true
GO_LIVE_REQUIRE_ETA=true
GO_LIVE_REQUIRE_SMTP=true
GO_LIVE_REQUIRE_S3=false

# Auth & Security
JWT_SECRET=<generate-strong-random-secret>
JWT_EXPIRES_IN=12h
AUDIT_HMAC_SECRET=<generate-strong-random-secret>
AI_KEY_ENCRYPTION_SECRET=<generate-strong-random-secret>
PRINT_GATEWAY_TOKEN=<strong-random-print-gateway-token>
OPENROUTER_API_KEY=<server-default-openrouter-key>
WHATSAPP_PROVIDER=meta
WHATSAPP_WEBHOOK_VERIFY_TOKEN=<whatsapp-webhook-verify-token>
WHATSAPP_META_TOKEN=
WHATSAPP_META_PHONE_NUMBER_ID=
WHATSAPP_TWILIO_ACCOUNT_SID=
WHATSAPP_TWILIO_AUTH_TOKEN=
WHATSAPP_TWILIO_FROM=

# ETA / Fiscal Integration (Egypt)
ETA_BASE_URL=
ETA_TOKEN_URL=
ETA_CLIENT_ID=
ETA_CLIENT_SECRET=
ETA_API_KEY=
ETA_PRIVATE_KEY=
ETA_PRIVATE_KEY_PASSPHRASE=
ETA_RIN=
ETA_COMPANY_NAME=
ETA_BRANCH_CODE=
ETA_COUNTRY=EG
ETA_GOVERNATE=Cairo
ETA_CITY=Cairo
ETA_STREET=
ETA_BUILDING=

# Socket.IO multi-instance scaling
SOCKET_REDIS_ENABLED=true
SOCKET_REDIS_URL=redis://<redis-host>:6379

# Day close email delivery (SMTP)
SMTP_HOST=<smtp-host>
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=<smtp-user>
SMTP_PASS=<smtp-password>
SMTP_FROM=reports@example.com

# S3 / Object Storage (optional)
S3_REGION=us-east-1
S3_BUCKET=
S3_ENDPOINT=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_PUBLIC_URL=
S3_FORCE_PATH_STYLE=false

# Client
VITE_API_URL=/api
VITE_SOCKET_URL=

# AI key is server-side only (do not expose in VITE_* envs)
# Optional local AI fallback via Ollama (recommended for unlimited internal usage)
OLLAMA_ENABLED=false
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=qwen2.5:7b-instruct

# Optional Firebase
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
